<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

<!--    bottom nav menu-->
    <style name="BottomNavigationViewWithIndicator" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/light</item>
        <item name="itemBackground">@drawable/bottom_nav_item_background</item>
        <item name="itemIconTint">@color/bottom_nav_item_selector</item>
        <item name="itemRippleColor">@color/my_color_sky</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BottomNavigationViewNoFrame" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@android:color/background_light</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.Title.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginBottom">@dimen/space_16x</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AnimeSearchViewTheme" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/anime_search_edit_text_selected</item>
        <item name="android:textColorSecondary">@color/my_color_sky</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="queryHint">Search..</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="AppTheme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@drawable/floating_actionbtn_selector</item>
        <item name="tint">@color/my_color_700</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.AppTheme.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.AppTheme.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="strokeWidth">@null</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">200dp</item>
    </style>

    <style name="AppTheme.TabLayoutStyle" parent="Widget.Material3.TabLayout.OnSurface">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabPaddingBottom">5dp</item>

    </style>

</resources>
